                        </tr>
                        <tr>
                            <th scope="row" colspan="3">
                                49-53
                            </th>
                            <td colspan="2">
                                <p class="input">R$ <%= dadosPlanos[i].fxetaria8 %></p>
                            </td>
                            <td colspan="2" class="comercial">
                                <p class="input">R$ <%= dadosPlanos[i].fxetaria8spread %></p>
