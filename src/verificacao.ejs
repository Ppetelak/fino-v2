                        </tr>
                        <tr>
                            <th scope="row" colspan="1">Pais</th>
                            <td colspan="3">
                                <p class="input" id="condicoesdependentes">
                                    <%= dadosPlanos[i].condicoesdependentes_pais %>
                                </p>
                            </td>
                            <td colspan="3">
                                <p class="input" id="documentosdependentes">
                                    <%= dadosPlanos[i].documentosdependentes_pais %>
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" colspan="1">Outros</th>
                            <td colspan="3">
                                <p class="input" id="condicoesdependentes">
                                    <%= dadosPlanos[i].condicoesdependentes_outros %>
                                </p>
                            </td>
                            <td colspan="3">
                                <p class="input" id="documentosdependentes">
                                    <%= dadosPlanos[i].documentosdependentes_outros %>
                                </p>
                            </td>
                        </tr>

                        <tr>
                            <th scope="col" colspan="100%" class="secao">
                                tabelas de preços
                            </th>
                        </tr>
