                        </tr>
                        <tr>
                            <th scope="row" colspan="3">39-43
                            </th>
                            <td colspan="2">
                                <p class="input">R$ <%= dadosPlanos[i].fxetaria6 %></p>
                            </td>
                            <td colspan="2" class="comercial">
                                <p class="input">R$ <%= dadosPlanos[i].fxetaria6spread %></p>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" colspan="3">44-48
                            </th>
                            <td colspan="2">
                                <p class="input">R$ <%= dadosPlanos[i].fxetaria7 %></p>
                            </td>
                            <td colspan="2" class="comercial">
                                <p class="input" class="comercial">R$ <%= dadosPlanos[i].fxetaria7spread %></p>
